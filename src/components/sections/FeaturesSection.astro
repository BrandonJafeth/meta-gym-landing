<style>
  .feature-card {
    position: relative;
    padding: 2rem;
    background: #141414;
    backdrop-filter: blur(8px);
    border-radius: 1.5rem;
    border: 1px solid #262626;
    transition: all 0.3s ease;
    overflow: hidden;
  }
  
  .feature-card::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 1.5rem;
    padding: 1px;
    background: linear-gradient(135deg, rgba(239, 68, 68, 0.3), transparent, rgba(239, 68, 68, 0.1));
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .feature-card:hover {
    transform: translateY(-8px);
    background: #1a1a1a;
    border-color: #ef4444;
    box-shadow: 0 20px 40px -12px rgba(239, 68, 68, 0.2);
  }
  
  .feature-card:hover::after {
    opacity: 1;
  }
  
  .feature-card:hover h3 {
    color: #ef4444 !important;
  }
  
  .feature-card:hover p {
    color: #d4d4d4 !important;
  }
  
  .feature-icon-container {
    position: relative;
  }
  
  .feature-icon-container::before {
    content: '';
    position: absolute;
    inset: -2px;
    border-radius: 50%;
    background: conic-gradient(from 0deg, #ef4444, #dc2626, #ef4444);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
  }
  
  .feature-card:hover .feature-icon-container::before {
    opacity: 0.3;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  gsap.registerPlugin(ScrollTrigger);
  
  document.addEventListener('DOMContentLoaded', () => {
    // Animación de entrada para las feature cards
    gsap.fromTo(".feature-card", {
      y: 60,
      opacity: 0,
      scale: 0.95
    }, {
      y: 0,
      opacity: 1,
      scale: 1,
      duration: 0.6,
      ease: "power3.out",
      stagger: 0.1,
      scrollTrigger: {
        trigger: ".feature-card",
        start: "top 80%",
        toggleActions: "play none none reverse"
      }
    });

    // Animación de hover para iconos
    document.querySelectorAll('.feature-card').forEach(card => {
      const icon = card.querySelector('.feature-icon svg');
      const iconContainer = card.querySelector('.feature-icon-container');
      
      card.addEventListener('mouseenter', () => {
        gsap.to(icon, {
          scale: 1.1,
          rotate: 360,
          duration: 0.6,
          ease: "power2.out"
        });
        
        gsap.to(iconContainer, {
          scale: 1.05,
          duration: 0.3,
          ease: "power2.out"
        });
      });
      
      card.addEventListener('mouseleave', () => {
        gsap.to(icon, {
          scale: 1,
          rotate: 0,
          duration: 0.3,
          ease: "power2.out"
        });
        
        gsap.to(iconContainer, {
          scale: 1,
          duration: 0.3,
          ease: "power2.out"
        });
      });
    });
  });
</script>