
---
// HeroSection component
---

<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20" style="background-color: #0e0e10;">

  <div class="absolute inset-0 bg-gradient-to-br from-[#0e0e10] via-[#1a1a1c] to-[#0e0e10]"></div>
  

  <div class="absolute inset-0 opacity-10" id="bg-pattern">
    <div class="absolute inset-0 bg-center hero-pattern"></div>
  </div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
    <div class="grid lg:grid-cols-2 gap-12 items-center min-h-[80vh]">
      
  
      <div class="text-left space-y-8 order-1" id="hero-content">
        <h1 class="text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold text-white leading-[0.9]" id="hero-title">
          <span class="block hero-line">Gestiona tu</span>
          <span class="block hero-line">Gimnasio como un</span>
          <span class="block hero-line text-success">Profesional</span>
        </h1>
        
        <p class="text-lg md:text-xl leading-relaxed max-w-lg" id="hero-description" style="color: #d4d4d4;">
          Software todo-en-uno para <span class="text-success font-semibold">aumentar membresías</span>, reducir cancelaciones y 
          automatizar tu operación diaria.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4" id="hero-buttons">
          <button class="hero-cta-primary" id="cta-primary">
            Comenzar Gratis
          </button>
          <button class="hero-cta-secondary" id="cta-secondary">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z"/>
            </svg>
            Ver Demo
          </button>
        </div>
      </div>
      

      <div class="relative order-2 lg:order-2" id="hero-image">
 
        <div class="absolute -inset-4 bg-gradient-to-r from-success/20 to-transparent blur-xl opacity-30 rounded-3xl"></div>
        
  
        <div class="absolute -inset-1 bg-gradient-to-r from-success via-transparent to-success opacity-40 rounded-2xl blur-sm"></div>
        
        <div class="relative z-10" id="main-image">
          <img 
            src="/pexels-cottonbro-4761352.jpg"
            alt="Atleta entrenando" 
            class="w-full h-auto max-w-md lg:max-w-lg xl:max-w-xl mx-auto rounded-2xl shadow-2xl object-cover border border-success/20"
          />
        </div>
    </div>
  </div>


<style>
  .hero-pattern {
    background-image: url('data:image/svg+xml,<svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="white" fill-opacity="0.1"><circle cx="30" cy="30" r="1"/></g></g></svg>');
  }
  
  .text-success {
    color: #fe6b24;
  }
  
  .bg-success {
    background-color: #fe6b24;
  }
  
  .hero-cta-primary {
    background-color: #e04a36;
    color: white;
    font-weight: 600;
    padding: 1rem 2rem;
    border-radius: 9999px;
    transition: all 0.3s;
    transform: translateY(0);
    border: none;
    cursor: pointer;
    min-width: 140px;
  }
  
  .hero-cta-primary:hover {
    background-color: #fe6b24;
    transform: translateY(-2px);
    box-shadow: 0 20px 40px -12px rgba(224, 74, 54, 0.4);
  }
  
  .hero-cta-secondary {
    border: 2px solid rgba(255, 255, 255, 0.2);
    background: transparent;
    color: white;
    font-weight: 600;
    padding: 1rem 2rem;
    border-radius: 9999px;
    transition: all 0.3s;
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transform: translateY(0);
    cursor: pointer;
    min-width: 140px;
  }
  
  .hero-cta-secondary:hover {
    border-color: #fe6b24;
    transform: translateY(-2px);
    background: rgba(254, 107, 36, 0.1);
    box-shadow: 0 20px 40px -12px rgba(254, 107, 36, 0.2);
    color: #fe6b24;
  }
  
  .floating-card {
    position: absolute;
    display: block;
    z-index: 20;
    opacity: 0;
  }
  
  .hero-line {
    display: inline-block;
    opacity: 0;
    transform: translateY(50px);
  }
  

  #hero-description {
    opacity: 0;
  }
  
  #hero-buttons {
    opacity: 0;
  }
  
  #main-image {
    opacity: 0;
  }
  

  @media (max-width: 1023px) {
    .floating-card {
      display: none;
    }
  }
  
  @media (max-width: 768px) {
    .hero-cta-primary, .hero-cta-secondary {
      width: 100%;
      justify-content: center;
    }
  }
  

  .no-js .hero-line {
    opacity: 1;
    transform: translateY(0);
  }
  
  .no-js #hero-description,
  .no-js #hero-buttons,
  .no-js #main-image {
    opacity: 1;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  console.log("usando GSAP: ", gsap.version);
  

  gsap.registerPlugin(ScrollTrigger);
  

  document.addEventListener('DOMContentLoaded', () => {
 
    const tl = gsap.timeline({ delay: 0.2 });
    

    tl.to(".hero-line", {
      y: 0,
      opacity: 1,
      duration: 0.8,
      stagger: 0.15,
      ease: "power3.out"
    })
    .to("#hero-description", {
      opacity: 1,
      y: 0,
      duration: 0.6,
      ease: "power2.out"
    }, "-=0.3")
    .to("#hero-buttons", {
      opacity: 1,
      y: 0,
      duration: 0.6,
      ease: "power2.out"
    }, "-=0.2")
    .to("#main-image", {
      opacity: 1,
      scale: 1,
      duration: 0.8,
      ease: "power2.out"
    }, "-=0.6");
    

    const buttons = document.querySelectorAll('.hero-cta-primary, .hero-cta-secondary');
    buttons.forEach(button => {
      button.addEventListener('mouseenter', () => {
        gsap.to(button, {
          scale: 1.05,
          duration: 0.3,
          ease: "power2.out"
        });
      });
      
      button.addEventListener('mouseleave', () => {
        gsap.to(button, {
          scale: 1,
          duration: 0.3,
          ease: "power2.out"
        });
      });
    });
    

    // Animación sutil para la imagen principal
    gsap.to("#main-image", {
      y: -4,
      duration: 3,
      ease: "sine.inOut",
      yoyo: true,
      repeat: -1
    });
    

    gsap.to("#bg-pattern", {
      y: -50,
      scrollTrigger: {
        trigger: "section",
        start: "top bottom",
        end: "bottom top",
        scrub: true
      }
    });
  });
</script>