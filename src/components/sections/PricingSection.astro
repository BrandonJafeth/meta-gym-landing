<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  gsap.registerPlugin(ScrollTrigger);
  
  document.addEventListener('DOMContentLoaded', () => {
 
    gsap.fromTo(".pricing-card", {
      y: 40,
      opacity: 0
    }, {
      y: 0,
      opacity: 1,
      duration: 0.6,
      ease: "power2.out",
      stagger: 0.15,
      scrollTrigger: {
        trigger: ".pricing-card",
        start: "top 85%",
        toggleActions: "play none none reverse"
      }
    });

    gsap.fromTo(".pricing-card-featured", {
      scale: 0.95
    }, {
      scale: 1.05,
      duration: 0.6,
      ease: "power2.out",
      delay: 0.3,
      scrollTrigger: {
        trigger: ".pricing-card-featured",
        start: "top 85%",
        toggleActions: "play none none reverse"
      }
    });


    gsap.fromTo(".feature-check", {
      scale: 0,
      opacity: 0
    }, {
      scale: 1,
      opacity: 1,
      duration: 0.4,
      ease: "back.out(1.7)",
      stagger: 0.05,
      scrollTrigger: {
        trigger: ".pricing-features",
        start: "top 90%",
        toggleActions: "play none none reverse"
      }
    });

    document.querySelectorAll('.cta-basic, .cta-pro, .cta-enterprise').forEach(button => {
      button.addEventListener('mouseenter', () => {
        gsap.to(button, {
          scale: 1.02,
          duration: 0.2,
          ease: "power2.out"
        });
      });
      
      button.addEventListener('mouseleave', () => {
        gsap.to(button, {
          scale: 1,
          duration: 0.2,
          ease: "power2.out"
        });
      });
    });
  });
</script>
